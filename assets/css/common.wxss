@keyframes anloading {
  0% {
    transform: translateY(0rpx);
  }

  50% {
    transform: translateY(20rpx);
  }

  100% {
    transform: translateY(0rpx);
  }
}

.mu-loading {
  padding: 50rpx 0;
  text-align: center;
  color: #888;
  font-size: 26rpx;
}

.loading-animation {
  display: inline-block;
  vertical-align: baseline;
  height: 30rpx;
  overflow: hidden;
  margin-right: 10rpx;
}

.loading-animation > text {
  width: 5rpx;
  height: 30rpx;
  background-color: #d43c33;
  position: relative;
  display: inline-block;
  margin-right: 6rpx;
  border-radius: 3rpx;
  animation: anloading 0.9s linear infinite;
  transform-origin: center bottom;
}

.loading-animation .an-2 {
  animation-delay: -.6s;
}

.loading-animation .an-3 {
  animation-delay: -.3s;
}

.loading-animation .an-4 {
  animation-delay: -.4s;
}

.mu-loading-lg .loading-animation {
  display: block;
}

.mu-loading-lg .mu-loading-txt {
  display: block;
  margin-top: 16rpx;
}

.mu-grid-panel-hd {
  padding: 15rpx 10rpx;
  font-size: 30rpx;
}

.mu-grid-panel-arrow {
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
  width: 16rpx;
  margin-left: 10rpx;
}

.mu-grids {
  width: 100%;
  padding: 0 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.mu-grid {
  width: 33%;
  padding: 0 5rpx;
  margin-bottom: 15rpx;
}

.media-box-hd {
  position: relative;
  padding-bottom: 100%;
}

.media-box-thumb {
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 4rpx;
}

.media-box-desc {
  display: block;
  position: absolute;
  left: 10rpx;
  bottom: 3rpx;
  z-index: 3;
  font-size: 20rpx;
  font-weight: 300;
  color: #fff;
}

.media-box-hd::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 2;
  width: 100%;
  height: 40rpx;
  background-image: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.2), transparent);
  background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.2), transparent);
}

.media-box-title {
  display: block;
  padding: 8rpx 5rpx;
  font-size: 24rpx;
  line-height: 28rpx;
}

/*歌曲、歌单封面上的播放次数及其他信息公共样式  ---start*/

.mu-song-cover {
  position: relative;
}

.mu-song-cover-thumb {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  border-radius: 4rpx;
}

.mu-cover-play-count {
  position: absolute;
  right: 8rpx;
  top: 0;
  font-size: 22rpx;
  font-weight: 300;
  color: #fff;
  z-index: 3;
}

.mu-cover-play-count .ico {
  width: 20rpx;
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
  margin-right: 6rpx;
}

.mu-song-cover::before, .mu-song-cover::after {
  content: " ";
  position: absolute;
  left: 0;
  width: 100%;
  height: 40rpx;
  z-index: 2;
}

.mu-song-cover::before {
  top: 0;
  background-image: -webkit-linear-gradient(top, rgba(0, 0, 0, 0.2), transparent);
  background-image: linear-gradient(180deg, rgba(0, 0, 0, 0.2), transparent);
}

.mu-song-cover::after {
  bottom: 0;
  background-image: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 0.2), transparent);
  background-image: linear-gradient(0deg, rgba(0, 0, 0, 0.2), transparent);
}

.mu-cover-info {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 46rpx;
  height: 46rpx;
}

/*歌曲、歌单封面上的播放次数及其他信息公共样式  ---end*/

.mu-search-bar {
  position: relative;
  height: 60rpx;
  padding: 0 60rpx;
  margin: 0 20rpx;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 60rpx;
  font-size: 28rpx;
}

.input-placeholder {
  color: rgba(255, 255, 255, 0.5);
  font-weight: 300;
}

.mu-search-bar input {
  height: 100%;
  color: #fff;
}

.ico-search, .ico-clear {
  position: absolute;
}

.ico-search {
  width: 28rpx;
  height: 28rpx;
  top: 16rpx;
  left: 20rpx;
}
.ico-clear  {
  width: 34rpx;
  height: 34rpx;
  top: 13rpx;
  right: 20rpx;
}

